<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/blankFragment">
    <fragment
        android:id="@+id/blankFragment"
        android:name="xyz.willnwalker.sendit.BlankFragment"
        android:label="SendIt"
        tools:layout="@layout/fragment_blank" />
    <fragment
        android:id="@+id/studentDashboardFragment"
        android:name="xyz.willnwalker.sendit.StudentDashboardFragment"
        android:label="Student Dashboard - Courses"
        tools:layout="@layout/fragment_student_dashboard" />
    <fragment
        android:id="@+id/instructorDashboardFragment"
        android:name="xyz.willnwalker.sendit.InstructorDashboardFragment"
        android:label="Instructor Dashboard - Courses"
        tools:layout="@layout/fragment_instructor_dashboard">
        <action
            android:id="@+id/action_teacherDashboardFragment_to_createCourseFragment"
            app:destination="@id/createCourseFragment" />
    </fragment>
    <fragment
        android:id="@+id/createCourseFragment"
        android:name="xyz.willnwalker.sendit.CreateCourseFragment"
        android:label="Create Course"
        tools:layout="@layout/fragment_create_course" />
</navigation>